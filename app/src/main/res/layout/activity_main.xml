<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutCompat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="?android:attr/colorControlHighlight"
    tools:context="com.example.pedrobraga.bancofinanca.MainActivity"
    tools:layout_editor_absoluteY="81dp">


    <ImageButton
        android:id="@+id/btncompra"
        android:layout_width="209dp"
        android:layout_height="0dp"
        android:layout_marginBottom="30dp"
        android:adjustViewBounds="true"
        android:backgroundTint="@color/colorPrimaryDark"
        android:cropToPadding="false"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/ic_action_carrinho" />


    <ImageButton
        android:id="@+id/btnlistaCompras"
        android:layout_width="209dp"
        android:layout_height="0dp"
        android:layout_marginBottom="183dp"
        android:backgroundTint="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/ic_action_money" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Cadastrar Compra"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btncompra"
        app:layout_constraintStart_toStartOf="@+id/btncompra"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="3dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Listar Compras"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintBottom_toTopOf="@+id/btnlistaCompras"
        app:layout_constraintStart_toStartOf="@+id/btnlistaCompras"
        app:layout_constraintTop_toBottomOf="@+id/btncompra" />


</android.support.constraint.ConstraintLayout>


