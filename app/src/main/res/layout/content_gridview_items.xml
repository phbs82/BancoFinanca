<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.pedrobraga.bancofinanca.gridview_items"
    tools:layout_editor_absoluteY="25dp"
    tools:showIn="@layout/activity_gridview_items">


    <ImageView
        android:id="@+id/android_gridview_image"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_weight="3"
        android:adjustViewBounds="false"
        android:background="@android:color/holo_orange_light"
        android:cropToPadding="false" />

    <TextView
        android:id="@+id/android_gridview_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:textColor="@color/ap_black"
        android:lineSpacingExtra="8sp"
        android:textSize="18sp"
        android:textStyle="bold" />


</LinearLayout>
